@model IEnumerable<PoC_NIP.Models.Company>

@{
    Layout = "~/Views/_Layout.cshtml";
}

<h2>Lista firm</h2>

<p>
    @Html.ActionLink("Utwórz nową", "CreateCompany")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Regon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Krs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Street)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StreetNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostalCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Regon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Krs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Street)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StreetNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostalCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "EditCompany", new { id=item.Id }) |
            @Html.ActionLink("Usuń", "DeleteCompany", new { id=item.Id })
        </td>
    </tr>
}

</table>
